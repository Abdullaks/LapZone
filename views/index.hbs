<html class="no-js" lang="zxx">

  <head>

  </head>

  <body>

    <main>

      <!-- banner-area -->

      <section class="banner-area mt-1">
        <div class="container-fluid">
          <div
            class="row justify-content-center pt-md-5 pt-lg-5"
            style="padding-top: 0px;margin-top: 0px;"
          >
            <div class="col-lg-12 col-md-12 pt-md-5 pt-lg-5">
              <div class="pt-md-5 pt-lg-5 pt-xl-2 pb-2">
                <div
                  id="carouselExampleControls"
                  lass="carousel slide"
                  data-ride="carousel"
                >
                  <div class="carousel-inner">
                    <div class="carousel-item active">

                      <img
                        src="images/banner/content.jpg"
                        class="d-block w-100"
                        alt="First slide"
                      />
                    </div>
                    <div class="carousel-item">
                      <img
                        class="d-block w-100"
                        src="images/banner/content 2.jpg"
                        alt="Second slide"
                      />
                    </div>
                    <div class="carousel-item">
                      <img
                        class="d-block w-100"
                        src="images/banner/content3.jpg"
                        alt="Third slide"
                      />
                    </div>
                  </div>
                  <a
                    class="carousel-control-prev"
                    href="#carouselExampleControls"
                    role="button"
                    data-slide="prev"
                  >
                    <span
                      style="color:transparent "
                      class="carousel-control-prev-icon"
                      aria-hidden="true"
                    ></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a
                    class="carousel-control-next"
                    href="#carouselExampleControls"
                    role="button"
                    data-slide="next"
                  >
                    <span
                      class="carousel-control-next-icon"
                      style="color:transparent"
                      aria-hidden="true"
                    ></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- banner-area End-->

      <!--? Popular Items Start -->
      <div class="popular-items section-padding30">
        <div class="container">
          <!-- Section tittle -->
          <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
              <div class="section-tittle mb-70 text-center">
                <h2>Popular Items</h2>
              </div>
            </div>
          </div>

          <div class="row">
            {{#each popularProduct}}
              <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                <div class="single-popular-items mb-50 text-center">

                  <div class="popular-img">
                    <a href="/productDetails/{{this._id}}"><img
                        src="/uploads/{{this.Image.0.image_1}}"
                        style="width: 20rem; height: 18rem; object-fit: cover;"
                        alt=""
                      /></a>

                    <div class="img-cap">
                      <span><button
                          onclick=" addToCart('{{this._id}}')"
                          style="background-color:transparent;border:none"
                        >Add to cart</button></span>

                    </div>
                    <div class="favorit-items">
                      <span class="flaticon-heart"><button
                          onclick=" addToWishList('{{this._id}}')"
                          style="background-color:transparent;border:none "
                        >.</button></span>
                    </div>

                  </div>
                  <div class="popular-caption">
                    <h3><a
                        href="/productDetails/{{this._id}}"
                      >{{this.ProductName}}</a></h3>
                    <span>â‚¹{{this.Price}}</span>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
          <!-- Button -->
          <div class="row justify-content-center">
            <div class="room-btn pt-70">
              <a href="/shop" class="btn view-btn1">View More Products</a>
            </div>
          </div>
        </div>
      </div>
      <!-- Popular Items End -->

      <!--?  Brands Start -->
      <div class="popular-items section-padding30">
        <div class="container">
          <!-- Section tittle -->
          <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
              <div class="section-tittle mb-70 text-center">
                <h2>Brands</h2>
                <h4>select Your Favourite Brand</h4>
              </div>
            </div>
          </div>

          <div class="row">
            {{#each brands}}
              <div class="col-xl-2 col-lg-4 col-md-6 col-sm-6">
                <div class="single-popular-items mb-50 text-center">

                  <div class="col partner-col text-center mt-3">
                    <a href="/filterbrands/{{this._id}}">
                      <img
                        style="width: 300px; height: 102px;"
                        src="/uploads/{{this.Image}}"
                        class="img"
                      />

                    </a>

                  </div>
                </div>
              </div>
            {{/each}}

          </div>

          <!-- Button -->
          {{! <div class="row justify-content-center">
                    <div class="room-btn pt-70">
                        <a href="/brands" class="btn view-btn1">View More Brands</a>
                    </div>
                </div> }}
        </div>
      </div>
      <!--  Brands End -->

    </main>

    <!--? Search model Begin -->
    <div class="search-model-box">
      <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="search-close-btn">+</div>
        <form class="search-model-form">
          <input
            type="text"
            id="search-input"
            placeholder="Searching key....."
          />
        </form>
      </div>
    </div>
    <!-- Search model end -->

  </body>

</html>