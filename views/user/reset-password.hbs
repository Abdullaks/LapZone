<section class="vh-90" style="background-color: #ffffff;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5"> Reset Password</h3>
            <span class="mobile-text">Enter your new Password
              <b class="text-danger"></b></span>
            <form action="/resetPassword" method="post" id="forms">
              <div class="form-outline mb-4">
                <input
                  type="password"
                  id="typeEmailX-2"
                  class="form-control form-control-lg"
                  name="newPassword"
                />
              </div>
              <span class="mobile-text">Confirm Password
                <b class="text-danger"></b></span>

              <div class="form-outline mb-4">
                <input
                  type="password"
                  id="typeEmailX-2"
                  class="form-control form-control-lg"
                  name="confirmNewPassword"
                />
              </div>

              <!-- Checkbox -->
              {{#if resetPasswordConfirmErr}}
                <p
                  class="error"
                  style="color: red;"
                >{{resetPasswordConfirmErr}}</p>
              {{/if}}

              <button
                class="btn btn-primary btn-lg btn-block"
                type="submit"
              >Submit</button>

            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>