<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
<div class="container">
  <div class="card">
    <div class="container-fliud">
      <div class="wrapper row">
        <div class="preview col-md-6">
          <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1"><img src="/uploads/{{productDetails.Image.[0].image_1}}" /></div>
            <div class="tab-pane" id="pic-2"><img src="/uploads/{{productDetails.Image.[0].image_2}}" /></div>
            <div class="tab-pane" id="pic-3"><img src="/uploads/{{productDetails.Image.[0].image_3}}" /></div>
            <div class="tab-pane" id="pic-4"><img src="/uploads/{{productDetails.Image.[0].image_4}}" /></div>
          </div>
          <div>
            <ul style="margin-left:5rem " class="preview-thumbnail nav nav-tabs">
              <li class="active">
                 <a data-target="#pic-1" data-toggle="tab"><img src="/uploads/{{productDetails.Image.[0].image_1}}" /></a>
              </li>
              <li><a data-target="#pic-2" data-toggle="tab"><img src="/uploads/{{productDetails.Image.[0].image_2}}" /></a>
              </li>
              <li><a data-target="#pic-3" data-toggle="tab"><img src="/uploads/{{productDetails.Image.[0].image_3}}" /></a>
              </li>
              <li><a data-target="#pic-4" data-toggle="tab"><img src="/uploads/{{productDetails.Image.[0].image_4}}" /></a>
              </li>
            </ul>
          </div>
        </div>
        <div class="details col-md-6">
          <h4 class="product-title">{{productDetails.ProductName}}</h4>
          <p class="product-description">{{productDetails.ShortDescription}}</p>
          <h5 class="card-text price">
            <del style="color:rgb(109, 106, 106) ;"> MRP :{{productDetails.MRP}}</del>
            <br>
            <strong style="color: rgb(6, 14, 88);">Price : {{productDetails.Price}}</strong> 
          </h5>
          <p><strong style="color: green;">Offer : {{productDetails.Discount}}%</strong></p> 
          {{!-- <p> Brand: <span style="color: rgb(15, 14, 14);">{{productDetails.Brand.BrandName}}</span> --}}
            <br>Ram & Rom: <span style="color:rgb(15, 14, 14) ;">{{productDetails.Ram}}, {{productDetails.StorageCapacity}}</span> <br>
            {{!-- Display:<span style="font-size: 13.5px; color: rgb(15, 14, 14);">{{productDetails.Display}}</span> --}}
          </p>
          {{#if user}}
          <div class="action">
            <button class="add-to-cart " onclick=" addToCart('{{productDetails._id}}')" type="button"
             >add to cart</button>
            <button class="like " onclick=" addToWishList('{{productDetails._id}}')" type="button">Add to Wish
              List</button>
          </div>
          {{else}}
          <div class="action">
            <a href="/login"><button class="add-to-cart" type="button">add to cart</button></a>
            <a href="/login"><button class="like " type="button">Add to Wish List</button></a>
          </div>
          {{/if}}
        </div>

        <div class="col-lg-12 mt-5">
          <div class="product_details_tab ">
            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">Description</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">Specification</a>
              </li>
              {{!-- <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">Reviews ( 2 )</a>
              </li> --}}
            </ul>
            <div class="tab-content mt-5">
              <div class="tab-pane active" id="tabs-1" role="tabpanel">
                <h6>Description</h6>
                <p>{{productDetails.Description}}</p>
              </div>
              <div class="tab-pane" id="tabs-2" role="tabpanel">
                <h6>Specification</h6>
                <P style="color:#735671;">In The Box : <span style="color: rgb(87, 83, 83);">{{productDetails.ItemsInPackage}}</span>
                </P>
                <P style="color:#735671;">Color : <span style="color: rgb(87, 83, 83);">{{productDetails.Color}}</span></P>
                <P style="color:#735671;">Processor : <span style="color: rgb(87, 83, 83);">{{productDetails.Processor}}</span>
                </P>
                <P style="color:#735671;">Internal Storage : <span
                    style="color: rgb(87, 83, 83);">{{productDetails.StorageCapacity}}</span></P>
                <P style="color:#735671;">RAM : <span style="color: rgb(87, 83, 83);">{{productDetails.Ram}}</span></P>
                <P style="color:#735671;">Battery : <span style="color: rgb(87, 83, 83);">{{productDetails.Battery}}</span></P>

              </div>
